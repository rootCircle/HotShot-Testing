<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="121dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="52dp"
                    android:fontFamily="sans-serif"
                    android:text="My Email"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/Profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Profile"
                    app:layout_constraintBottom_toTopOf="@+id/line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView_email"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_marginEnd="11dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/button_sign_out"
                    app:layout_constraintEnd_toStartOf="@+id/button_sign_out"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_sign_out"
                    app:layout_constraintVertical_bias="0.851" />

                <Button
                    android:id="@+id/button_sign_out"
                    android:layout_width="88dp"
                    android:layout_height="23dp"
                    android:layout_marginBottom="37dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/buttonshape"
                    android:text="Sign Out"
                    app:layout_constraintBottom_toTopOf="@+id/Account"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView_email"
                    app:layout_constraintTop_toBottomOf="@+id/line" />

                <View
                    android:id="@+id/line"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginBottom="48dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginStart="1dp"
                    android:background="#474747"
                    app:layout_constraintBottom_toTopOf="@+id/button_sign_out"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Profile" />

                <View
                    android:id="@+id/line2"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginBottom="18dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginStart="1dp"
                    android:background="#474747"
                    app:layout_constraintBottom_toTopOf="@+id/imageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Account" />

                <View
                    android:id="@+id/line4"
                    android:layout_width="384dp"
                    android:layout_height="2dp"
                    android:layout_marginBottom="282dp"
                    android:background="#474747"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_mb_get"
                    tools:layout_editor_absoluteX="0dp" />

                <TextView
                    android:id="@+id/Account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginStart="16dp"
                    android:text="Account"
                    app:layout_constraintBottom_toTopOf="@+id/line2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_sign_out" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="9dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView_mb_share"
                    app:layout_constraintEnd_toStartOf="@+id/textView4"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/line2"
                    app:srcCompat="@drawable/ic_up" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_download_"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="212dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="151dp"
                    android:layout_height="23dp"
                    android:text="mb that you share : "
                    tools:layout_editor_absoluteX="41dp"
                    tools:layout_editor_absoluteY="174dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="160dp"
                    android:layout_height="22dp"
                    android:text="mb that you can get : "
                    tools:layout_editor_absoluteX="44dp"
                    tools:layout_editor_absoluteY="212dp" />

                <TextView
                    android:id="@+id/textView_mb_share"
                    android:layout_width="88dp"
                    android:layout_height="23dp"
                    tools:layout_editor_absoluteX="245dp"
                    tools:layout_editor_absoluteY="173dp" />

                <TextView
                    android:id="@+id/textView_mb_get"
                    android:layout_width="102dp"
                    android:layout_height="22dp"
                    tools:layout_editor_absoluteX="245dp"
                    tools:layout_editor_absoluteY="212dp" />

                <TextView
                    android:id="@+id/wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Wallet"
                    app:layout_constraintBottom_toTopOf="@+id/line4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_mb_get"
                    app:layout_constraintVertical_bias="1.0" />

                <RadioButton
                    android:id="@+id/radioButton_1"
                    android:layout_width="175dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="245dp"
                    android:text="0.5GB 1$"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/line4"
                    tools:layout_editor_absoluteX="16dp" />

                <RadioButton
                    android:id="@+id/radioButton_2"
                    android:layout_width="174dp"
                    android:layout_height="36dp"
                    android:text="1GB 2$"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="306dp" />

                <RadioButton
                    android:id="@+id/radioButton_5"
                    android:layout_width="173dp"
                    android:layout_height="38dp"
                    android:text="5Gb 5$"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="342dp" />

                <Button
                    android:id="@+id/button_pay"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:background="@drawable/buttonshape"
                    android:text="Pay"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="396dp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="44dp"
                    android:layout_marginStart="16dp"
                    android:text="We'll contact you for bank account information once revenue is accrued from provider wifi"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_pay" />

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

</RelativeLayout>